/*Nice grey color :-  #D2D2D3*/
#game {
	border-radius: 10px; /*adds rounder corner to box/element*/
	padding : 50px;
	background: #DFFAAF ;
	width: 500px;
	height: 460px;
	margin: 0 auto;
	display: -webkit-box; 
	-webkit-box-pack: center; /* Alignments of the child elements*/
	-webkit-box-align: center;
}



#cards {
	position: relative;
	left: -385px;
	top: -25px;
	width: 380px;
	height: 400px;
}

.card {
	-webkit-perspective: 600; /*These are the cards so we need to give them depth*/
	width: 80px;
	height: 120px;
	position: absolute;
	-moz-transition: all .3s;
	-webkit-transition: all .3s;
	transition: all .3s;
	overflow: hidden;
}

.face {
	border-radius: 10px;
	width: 100%;
	height: 100%;
	position: absolute;
	-webkit-transition-property: opacity, transform, box-shadow;
	-webkit-transition-duration: .3s;
	-webkit-backface-visibility: hidden;
}

.front {
	background: #999 url('/assets/coolP.jpg') ;
	z-index: 10;
}
.back {	
	background: #F0F9E3;
	background-repeat: no-repeat center !important;
	background-position: center !important;
	-webkit-transform: rotate3d(0,1,0,-180deg);
	z-index: 8;
	max-width: 100%;
	max-height: auto;
}


.checkMarks {
	position: relative;
    right:0;
    bottom:-100px;
    visibility: hidden;
    text-align: center;
	
}


#removeicon, #checkmarkicon{
	padding-bottom:3px;
	padding-left:2px;
	padding-right:3px;
}

#removeicon:hover, #checkmarkicon:hover{
	padding-bottom:3px;
	padding-left:2px;
	padding-right:3px;
	opacity: 0.5;
}

.card:hover .face, .card-flipped .face {
	-webkit-box-shadow: 0 0 10px #aaa;
}
.card-flipped .front {
	-webkit-transform: rotate3d(0,1,0,180deg);
	z-index: 8;
}
.card-flipped .back {
	-webkit-transform: rotate3d(0,1,0,0deg);
	z-index: 10;
}

.card-removed {
	opacity: 0; /*As if it is transparent*/
}

