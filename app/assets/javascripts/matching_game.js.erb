function calc_mg_score(time_taken_to_finish){
	var score;

	if (time_taken_to_finish <= 25){
		score = 60;
		return score;
	}
	if (time_taken_to_finish > 25 && time_taken_to_finish <= 45){
		score = 50;
		return score;
	}
	if (time_taken_to_finish > 45 && time_taken_to_finish <= 50){
		score = 40;
		return score;
	}
	if (time_taken_to_finish > 50){
		score = 30;
		return score;
	}
}
